  <script>
    window.onerror = function (msg, url, lineNo, columnNo, error) {
      document.body.innerHTML = `
          <div style="background:white; color:red; padding:20px; text-align:left; font-family:monospace; z-index:9999; position:fixed; top:0; left:0; width:100%; height:100%;">
            <h1>ðŸš¨ STARTUP CRASH ðŸš¨</h1>
            <p><strong>Error:</strong> ${msg}</p>
            <p><strong>Location:</strong> ${url}:${lineNo}:${columnNo}</p>
            <pre style="background:#eee; padding:10px; overflow:auto;">${error ? error.stack : 'No stack trace'}</pre>
            <button onclick="window.location.reload()" style="padding:10px 20px; font-size:16px; margin-top:20px;">RELOAD</button>
          </div>
        `;
      return false;
    };
    window.onunhandledrejection = function (event) {
      window.onerror(event.reason ? event.reason.message : 'Unhandled Rejection', '', 0, 0, event.reason);
    };
  </script>
